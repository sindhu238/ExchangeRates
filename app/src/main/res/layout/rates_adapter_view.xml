<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="72dp"
		xmlns:tools="http://schemas.android.com/tools"
		android:paddingStart="16dp"
		android:paddingEnd="16dp"
		android:paddingTop="10dp"
		android:paddingBottom="10dp"
		android:background="@color/white"
		xmlns:app="http://schemas.android.com/apk/res-auto">
	
	<de.hdodenhof.circleimageview.CircleImageView
			android:id="@+id/flagImageView"
			android:layout_width="40dp"
			android:layout_height="40dp"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			android:contentDescription="@string/country_flag_desc"/>
	
	<TextView
			android:id="@+id/currencyCodeTV"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			tools:text="EUR"
			android:textColor="@color/black"
			android:layout_marginStart="72dp"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="@id/flagImageView"
			android:textSize="16sp"
			android:textStyle="bold"/>

	<TextView
			android:id="@+id/currencyNameTV"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintTop_toBottomOf="@id/currencyCodeTV"
			app:layout_constraintBottom_toBottomOf="@id/flagImageView"
			tools:text="Euro"
			app:layout_constraintStart_toStartOf="@id/currencyCodeTV"/>
	
	<com.example.exchangeRates.customViews.currencyEditText.CurrencyRateEditText
			android:id="@+id/rateET"
			android:layout_width="80dp"
			android:layout_height="wrap_content"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="@id/currencyCodeTV"
			app:layout_constraintBottom_toBottomOf="@id/currencyNameTV"
			android:inputType="numberDecimal"
			android:importantForAutofill="no"
			android:hint="@string/rate_hint"
			android:textSize="20sp"
			android:textColor="@color/black"
			style="@style/AppTheme.CustomEditText"
			android:textStyle="bold"
			android:gravity="center"
			tools:targetApi="o"/>
</androidx.constraintlayout.widget.ConstraintLayout>